<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView

        android:id="@+id/tips"
        android:layout_centerHorizontal="true"
        android:text="请预约会议室"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_margin="50dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="会议室:"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:id="@+id/TV_meeting"
        android:layout_below="@+id/tips"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="fill_parent"
        android:id="@+id/ED_meeting"
        android:layout_below="@+id/tips"
        android:layout_toRightOf="@+id/TV_meeting"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="日期:"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/TV_date"
        android:layout_below="@+id/TV_meeting"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/ET_date"
        android:layout_width="fill_parent"
        android:layout_below="@+id/TV_meeting"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/TV_date"
        android:text=""
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="时间："
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:id="@+id/TV_daytime"
        android:layout_below="@+id/TV_date"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/ET_daytime"
        android:layout_width="fill_parent"
        android:layout_below="@+id/TV_date"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/TV_daytime"
        android:text=""
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/sure"
        android:layout_below="@+id/TV_daytime"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:textSize="20sp"
        android:text="预约"
        android:layout_height="wrap_content" />



</RelativeLayout>
